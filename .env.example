# ==============================================
# ENVIRONMENT IDENTIFICATION
# ==============================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NEXT_PUBLIC_APP_NAME="Empathy Ledger"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
DATABASE_URL=postgresql://postgres:[password]@[host]:[port]/[database]

# ==============================================
# AIRTABLE MIGRATION (temporary - for migration only)
# ==============================================
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# ==============================================
# AWS BACKUP CONFIGURATION
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
BACKUP_BUCKET=empathy-ledger-backups-dev

# ==============================================
# BACKUP & SECURITY
# ==============================================
BACKUP_ENCRYPTION_PASSWORD=your_very_secure_backup_password_32_chars
BACKUP_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
BACKUP_EMAIL_RECIPIENTS=admin@example.com,dev@example.com

# ==============================================
# AI & CONTENT ANALYSIS
# ==============================================
# OpenAI for content analysis, transcription, and insights
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic Claude for advanced content understanding
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Assembly AI for transcription
ASSEMBLY_AI_API_KEY=your_assembly_ai_api_key_here

# ==============================================
# MEDIA PROCESSING
# ==============================================
# Cloudinary for image and video optimization
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# AUTHENTICATION
# ==============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_32_chars_minimum
JWT_SECRET=your_jwt_secret_32_chars_minimum

# OAuth providers (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Auth0 (alternative)
AUTH0_SECRET=your_auth0_secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# ==============================================
# EMAIL & NOTIFICATIONS
# ==============================================
# Resend for transactional emails
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@empathyledger.com

# SendGrid alternative
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
SLACK_CHANNEL=#dev-alerts

# ==============================================
# ANALYTICS & MONITORING
# ==============================================
# PostHog for privacy-first analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=empathy-ledger
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ==============================================
# PAYMENT PROCESSING
# ==============================================
# Stripe for value distribution and subscriptions
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ==============================================
# FEATURE FLAGS
# ==============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_AI_ANALYSIS=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Feature rollout flags
FEATURE_AI_INSIGHTS=true
FEATURE_VIDEO_STORIES=true
FEATURE_COMMUNITY_MATCHING=true
FEATURE_VALUE_DISTRIBUTION=false
FEATURE_ADVANCED_ANALYTICS=true

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
DEBUG=false
VERBOSE_LOGGING=false

# Migration settings
DRY_RUN=true
MIGRATION_BATCH_SIZE=100
MIGRATION_DELAY_MS=1000

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_LIMIT=100

# Story submission limits
RATE_LIMIT_STORY_SUBMISSION=10
RATE_LIMIT_API_CALLS=100
RATE_LIMIT_WINDOW_MINUTES=60

# ==============================================
# SECURITY & COMPLIANCE
# ==============================================
# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Content Security Policy
CSP_REPORT_URI=https://your-csp-endpoint/report

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# GDPR compliance
GDPR_WEBHOOK_SECRET=your_gdpr_webhook_secret
PRIVACY_POLICY_URL=https://empathyledger.com/privacy
TERMS_OF_SERVICE_URL=https://empathyledger.com/terms

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT_MS=30000

# Migration settings
MIGRATION_TIMEOUT_MS=300000
BACKUP_RETENTION_DAYS=30

# Test database (separate from development)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/empathy_ledger_test

# ==============================================
# STORAGE CONFIGURATION
# ==============================================
# File upload limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,audio/mpeg,video/mp4

# Storage backend
STORAGE_BACKEND=supabase

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false
CACHE_TTL_SECONDS=300

# ==============================================
# CONTENT MODERATION
# ==============================================
# Perspective API for content moderation
PERSPECTIVE_API_KEY=your_perspective_api_key

# Custom moderation settings
MODERATION_ENABLED=true
AUTO_APPROVE_THRESHOLD=0.8
MANUAL_REVIEW_THRESHOLD=0.6

# ==============================================
# COMMUNITY & SOVEREIGNTY SETTINGS
# ==============================================
# Default community settings
DEFAULT_COMMUNITY_PRIVACY=community
REQUIRE_COMMUNITY_APPROVAL=true
ENABLE_CULTURAL_PROTOCOLS=true

# Indigenous data sovereignty
ENABLE_CARE_PRINCIPLES=true
DATA_SOVEREIGNTY_MODE=strict
ALLOW_DATA_EXPORT=true

# Data retention
DATA_RETENTION_DAYS=2555  # 7 years
INACTIVE_USER_CLEANUP_DAYS=365

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Database GUI access
ENABLE_DB_STUDIO=true
DB_STUDIO_PORT=3001

# API documentation
ENABLE_API_DOCS=true
API_DOCS_PASSWORD=dev_docs_password

# Seed data
ENABLE_SEED_DATA=true
SEED_ADMIN_EMAIL=admin@example.com

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-endpoint
OTEL_SERVICE_NAME=empathy-ledger
OTEL_SERVICE_VERSION=1.0.0

# Health check endpoints
HEALTH_CHECK_SECRET=your_health_check_secret

# ==============================================
# PERFORMANCE
# ==============================================
# Image optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=80

# Cookie settings
ENABLE_COOKIE_CONSENT=true
COOKIE_DOMAIN=.empathyledger.com

# ==============================================
# E2E TESTING
# ==============================================
E2E_BASE_URL=http://localhost:3000
E2E_ADMIN_EMAIL=test@example.com
E2E_ADMIN_PASSWORD=test_password

# ==============================================
# ENVIRONMENT-SPECIFIC NOTES
# ==============================================

